    <title>Login Page - Airtel Sales</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="position: relative; overflow-y:hidden">

    <div class="col-md-12 login" style="padding: 0; height:100vh !important">
        @*<div class="col-md-8 hidden-xs hidden-sm loginImage" style="position: relative;">
