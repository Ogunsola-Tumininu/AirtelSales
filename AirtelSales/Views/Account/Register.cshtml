@model AirtelSales.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>Register Page - Airtel Sales</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="position: relative; overflow-y:hidden">

    <div class="col-md-12 login" style="padding: 0; height:100vh !important">

        <div class="col-md-4 col-md-offset-4 col-sm-12 ">
            <div style=" border: 1px solid gray; background-color: white; opacity: 0.9; border-radius: 20px; padding: 25px; padding-top: 2%; margin: 50px 0px; height: 90% !important; overflow-y:scroll">
                <div class="title">
                    <img src="~/Content/images/airtel-logo.png" style="width: 20%" />

                    <h3>Airtel Sales Portal</h3>
                    <h4>Create Account</h4>
                </div>
                @if (ViewBag.EmailNotConfirmed != null)
                {
                    <div class="alert alert-danger">@ViewBag.EmailNotConfirmed</div>
                }


                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group  ">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control ", id = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group  ">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control " })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group  ">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control " })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-danger btn-block ">Register</button>
                        </div>
                    </div>
                }


                <div class="register">
                    <span class="text">Already Registered? Please Click</span><br>
                    @Html.ActionLink("here", "Login")
                </div>

            </div>
        </div>
    </div>

    <script>
        function showPassword() {
            var pass = document.getElementById("Password");
            if (pass.type === "password") {
                pass.type = "text";
            }
            else {
                pass.type = "password";
            }
        }

        $(document).ready(function () {
            $(".alert").ready(function () {
                setTimeout(function () {
                    $(".alert").hide();
                }, 10000);
            })

            $("#eduAlert").ready(function () {
                setTimeout(function () {
                    $(".alert").hide();
                }, 10000);
            })
        })
    </script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script>

            $(document).ready(function () {
                $(".alert").ready(function () {
                    setTimeout(function () {
                        $(".alert").hide();
                    }, 10000);
                })

                $("#eduAlert").ready(function () {
                    setTimeout(function () {
                        $(".alert").hide();
                    }, 10000);
                })
            })

        </script>
    }

</body>

</html>
