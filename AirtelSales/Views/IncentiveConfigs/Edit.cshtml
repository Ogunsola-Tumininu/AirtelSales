@model AirtelSales.DAL.IncentiveConfig

@{
    ViewBag.Title = "Edit";
}

<div class="col-md-12">
    <div class="card card-dashboard-twelve mg-b-20">

        <div class="media-body">
            <div class="card card-minimal-two">
                <div class="card-header">
                    <h2>Edit Incentive </h2>
                </div>
                <div class="card-body">

                </div><!-- card-body -->
            </div><!-- card minimal-->
        </div> <!--media body-->
    </div> <!--card-->
</div>

<div class="col-md-12">
    <div class="card card-dashboard-twelve mg-b-20">

        <div class="media-body">
            <div class="card card-minimal-two">
               
                <div class="card-body">
                    <div class="pd-30 pd-sm-40  wd-xl-50p">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.id)
                            @Html.HiddenFor(model => model.created_at)
                            @Html.HiddenFor(model => model.created_by)

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="row row-xs align-items-center mg-b-20">
                                    <div class="col-md-4">
                                        @Html.LabelFor(model => model.quarter, htmlAttributes: new { @class = "control-label mg-b-0" })
                                    </div><!-- col -->
                                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                                        @Html.EditorFor(model => model.quarter, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.quarter, "", new { @class = "text-danger" })
                                    </div><!-- col -->
                                </div><!-- row -->

                                <div class="row row-xs align-items-center mg-b-20">
                                    <div class="col-md-4">
                                        @Html.LabelFor(model => model.orsc, htmlAttributes: new { @class = "control-label mg-b-0" })
                                    </div><!-- col -->
                                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                                        @Html.EditorFor(model => model.orsc, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.orsc, "", new { @class = "text-danger" })
                                    </div><!-- col -->
                                </div><!-- row -->

                                <div class="row row-xs align-items-center mg-b-20">
                                    <div class="col-md-4">
                                        @Html.LabelFor(model => model.bts, htmlAttributes: new { @class = "control-label mg-b-0" })
                                    </div><!-- col -->
                                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                                        @Html.EditorFor(model => model.bts, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.bts, "", new { @class = "text-danger" })
                                    </div><!-- col -->
                                </div>


                                <button type="submit" class="btn btn-az-primary pd-x-30 mg-r-5">Submit</button>
                            </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                    </div>
                </div><!-- card-body -->
            </div><!-- card minimal-->
        </div> <!--media body-->
    </div> <!--card-->
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
