@model IEnumerable<AirtelSales.DAL.IncentiveConfig>

@{
    ViewBag.Title = "Index";
}

    <!-- THIS NEEDS TO BE ABOVE THE THE AZ-CONTENT-BODY DIV  -->
    <div class="row bg-white bd-y bd-x-0 bd-gray-300 pd-y-15 pd-x-15 ">
        <div class="col-lg-2">
            <div class="btn-group">
                <button class="btn btn-link dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                    <i class="fa fa-filter mg-r-10"></i>Filter
                </button>
                <div class="dropdown-menu">
                    <form class="px-4 py-3">
                        <div class="form-group">


                        </div>
                    </form>




                </div>

            </div>



        </div>

        <div class="col-lg-4">
            <div class="bd-l bd-gray-200 pd-l-10">
                <input class="form-control" placeholder="Search survey" type="text">
            </div>

        </div>


        <div class="col-lg-6">
            <a href="@Url.Action(" create",="" "survey"="" )"="" class="btn btn-small btn-primary float-right"><i
                    class="fa fa-plus mg-r-10"></i>Create
                incentive</a></div>
    </div>


<div class="col-md-12">
    <div class="card card-dashboard-twelve mg-b-20">

        <div class="media-body">
            <div class="card card-minimal-two">
                <div class="card-header">
                    <h2>Incentive Config</h2>
                    <a href="@Url.Action("Create", "IncentiveConfigs" )" class="btn btn-outline-danger float-right">Create</a>
                </div>
                <div class="card-body">

                </div><!-- card-body -->
            </div><!-- card minimal-->
        </div> <!--media body-->
    </div> <!--card-->
</div>

<div class="col-md-12">
    <div class="card card-dashboard-twelve mg-b-20">

        <div class="media-body">
            <div class="card card-minimal-two">
                @*<div class="card-header">

                    </div>*@
                <div class="card-body">
                    <div style="margin: 20px auto">
                        <table id="table_id" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.quarter)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.orsc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.bts)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.created_by)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.created_at)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.quarter)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.orsc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.bts)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.created_by)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.created_at)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div><!-- card-body -->
            </div><!-- card minimal-->
        </div> <!--media body-->
    </div> <!--card-->
</div>




