@model IEnumerable<AirtelSales.DAL.IncentiveConfig>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    <div class="card card-dashboard-twelve mg-b-20">

        <div class="media-body">
            <div class="card card-minimal-two">
                <div class="card-header">
                    <h2>Incentive Config</h2>
                    <a href="@Url.Action("Create", "IncentiveConfigs" )" class="btn btn-outline-danger float-right">Create</a>
                </div>
                <div class="card-body">

                </div><!-- card-body -->
            </div><!-- card minimal-->
        </div> <!--media body-->
    </div> <!--card-->
</div>

<div class="col-md-12">
    <div class="card card-dashboard-twelve mg-b-20">

        <div class="media-body">
            <div class="card card-minimal-two">
                @*<div class="card-header">

                    </div>*@
                <div class="card-body">
                    <div style="margin: 20px auto">
                        <table id="table_id" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.quarter)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.orsc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.bts)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.created_by)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.created_at)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.quarter)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.orsc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.bts)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.created_by)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.created_at)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div><!-- card-body -->
            </div><!-- card minimal-->
        </div> <!--media body-->
    </div> <!--card-->
</div>




