    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        function showPassword() {
            var pass = document.getElementById("Password");
            if (pass.type === "password") {
                pass.type = "text";
            }
            else {
                pass.type = "password";
            }
        }

        $(document).ready(function () {
            $("#RegionalManagerDiv").hide();
            $("#ZonalManagerDiv").hide();
            $("#AreaManagerDiv").hide();
            $("#regionDiv").hide();
            $("#zoneDiv").hide();
            $("#areaDiv").hide();
            $("#marketDiv").hide();
            $("#DealerDiv").hide();
            $("#subDealerDiv").hide();
            
            $("#Role").change(function () {
                if ($(this).val() == "RegionalManager" ) {
                    $("#RegionalManagerDiv").hide();
                    $("#ZonalManagerDiv").hide();
                    $("#AreaManagerDiv").hide();
                    $("#regionDiv").show();
                    $("#zoneDiv").hide();
                    $("#areaDiv").hide();
                    $("#marketDiv").hide();
                    $("#DealerDiv").hide();
                    $("#subDealerDiv").hide();
                }
                else if ($(this).val() == "ZonalManager") {
                    $("#RegionalManagerDiv").show();
                    $("#ZonalManagerDiv").hide();
                    $("#AreaManagerDiv").hide();
                    $("#regionDiv").hide();
                    $("#zoneDiv").show();
                    $("#areaDiv").hide();
                    $("#DealerDiv").hide();
                    $("#subDealerDiv").hide();
                }
                else if ($(this).val() == "AreaManager") {
                    $("#RegionalManagerDiv").show();
                    $("#ZonalManagerDiv").show();
                    $("#AreaManagerDiv").hide();
                    $("#regionDiv").hide();
                    $("#zoneDiv").hide();
                    $("#areaDiv").show();
                    $("#marketDiv").hide();
                    $("#DealerDiv").hide();
                    $("#subDealerDiv").hide();
                }
                else if ($(this).val() == "MarketDeveloper") {
                    $("#RegionalManagerDiv").show();
                    $("#ZonalManagerDiv").show();
                    $("#AreaManagerDiv").show();
                    $("#marketDiv").show();
                    $("#regionDiv").hide();
                    $("#zoneDiv").hide();
                    $("#areaDiv").hide();
                    $("#DealerDiv").hide();
                    $("#subDealerDiv").hide();
                }
                else if ($(this).val() == "Dealer") {
                    $("#RegionalManagerDiv").show();
                    $("#ZonalManagerDiv").show();
                    $("#AreaManagerDiv").show();
                    $("#marketDiv").show();
                    $("#regionDiv").hide();
                    $("#zoneDiv").hide();
                    $("#areaDiv").hide();
                    $("#DealerDiv").hide();
                    $("#subDealerDiv").hide();
                }

                else if ($(this).val() == "SubDealer") {
                    $("#RegionalManagerDiv").show();
                    $("#ZonalManagerDiv").show();
                    $("#AreaManagerDiv").show();
                    $("#marketDiv").show();
                    $("#regionDiv").hide();
                    $("#zoneDiv").hide();
                    $("#areaDiv").hide();
                    $("#DealerDiv").show();
                    $("#subDealerDiv").hide();
                }

                else if ($(this).val() == "Reseller") {
                    $("#RegionalManagerDiv").show();
                    $("#ZonalManagerDiv").show();
                    $("#AreaManagerDiv").show();
                    $("#marketDiv").show();
                    $("#regionDiv").hide();
                    $("#zoneDiv").hide();
                    $("#areaDiv").hide();
                    $("#DealerDiv").show();
                    $("#subDealerDiv").show();
                }
            })
        })
    </script>

